@page "/user/forgot-password"
@using System.ComponentModel.DataAnnotations
@using WebGUI.Services
@inject IUserService UserService
@inject NavigationManager Nav

<div class="d-flex justify-content-center align-items-center vw-100 vh-100 bg-dark">
    <div class="card shadow p-4" style="width: 100%; max-width: 420px;">
        <h3 class="text-center mb-3">Forgot Password</h3>

        @if (Success)
        {
        <div class="alert alert-info text-center">
            If your email exists in our system, you will receive a reset link shortly.
        </div>
        }
        else if (!string.IsNullOrEmpty(ErrorMessage))
        {
        <div class="alert alert-danger text-center">@ErrorMessage</div>
        }

        <EditForm Model="Model" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label>Email address</label>
                <InputText class="form-control" @bind-Value="Model.Email" />
            </div>

            <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
        </EditForm>
    </div>
</div>

@code {
private ForgotPasswordModel Model = new();
private string ErrorMessage = "";
private bool Success = false;

private async Task HandleSubmit()
{
var result = await UserService.SendResetPasswordEmailAsync(Model.Email);
Success = true;
}

public class ForgotPasswordModel
{
[Required, EmailAddress]
public string Email { get; set; } = string.Empty;
}
}
